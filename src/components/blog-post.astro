---
const { title, url, date, description } = Astro.props;

const formattedDate = new Date(date).toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<li
  class="hover:bg-gray-200 rounded-lg transition-colors duration-200 dark:text-gray-200 dark:hover:bg-gray-800"
>
  <a href={url} class="block p-6">
    <h2 class="text-xl font-semibold mb-2">{title}</h2>
    <p class="text-base text-gray-500">{description}</p>
    <p class="text-sm text-gray-500">{formattedDate}</p>
  </a>
</li>
