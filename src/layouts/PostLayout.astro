---
import Layout from "./Layout.astro";
const { frontmatter } = Astro.props;
---

<Layout pageTitle={frontmatter.title}>
  <article class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <header class="mb-8">
      <h1 class="text-4xl font-bold mb-2">{frontmatter.title}</h1>
      <p class="text-gray-600 mb-4">
        Published on {
          frontmatter.pubDate.toLocaleDateString("en-US", {
            year: "numeric",
            month: "long",
            day: "numeric",
          })
        }
      </p>
      {
        frontmatter.author && (
          <p class="text-gray-700">By {frontmatter.author}</p>
        )
      }
    </header>

    <div class="prose prose-lg max-w-none">
      <p class="lead"><em>{frontmatter.description}</em></p>
      <slot />
    </div>

    {
      frontmatter.tags && (
        <div class="mt-8">
          <h2 class="text-xl font-semibold mb-2">Tags:</h2>
          <div class="flex flex-wrap gap-2"></div>
        </div>
      )
    }
  </article>
</Layout>
